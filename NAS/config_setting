1. log-in as admin

2. Change to root
>>> sudo -i

3. Check permission of config file
>>> ls -l /../../volume1/@appstore/MariaDB10/usr/local/mariadb10/etc/mysql/my.cnf

4. Change permission of config file
>>> sudo chmod 644 /../../volume1/@appstore/MariaDB10/usr/local/mariadb10/etc/mysql/my.cnf

5. Edit config file
>>> vi /../../volume1/@appstore/MariaDB10/usr/local/mariadb10/etc/mysql/my.cnf
(i: edit, !wq!: save and exit)

(Edited .config file)
# references: https://forum.kodi.tv/showthread.php?tid=204620
# references:https://help-en.paperoffice.com/article/how_to_correctly_configure_mariadb-mysql_database_or_nas_myini_o_mycnf
# references: https://blog.naver.com/islove8587/221975639299

# DO NOT EDIT THIS FILE !!!
# You can change the port on user interface of MariaDB10.
# Please add other custom configuration to /var/packages/MariaDB10/etc/my.cnf
#
[client]
socket = /run/mysqld/mysqld10.sock

[mysqld]
bind-address = 0.0.0.0
socket = /run/mysqld/mysqld10.sock
pid-file = /run/mysqld/mysqld10.pid
skip-external-locking
key_buffer_size = 16M
max_allowed_packet = 1G
performance_schema = ON

skip-name-resolve

table_open_cache = 4
read_buffer_size = 512K
read_rnd_buffer_size = 512K
net_buffer_length = 2K
thread_stack = 240K
innodb_data_home_dir = /var/packages/MariaDB10/target/mysql
innodb_data_file_path = ibdata1:10M:autoextend:max:512M
innodb_log_group_home_dir = /var/packages/MariaDB10/target/mysql
innodb_buffer_pool_size = 6G

join_buffer_size = 2M

#innodb_log_file_size = 5M
#innodb_log_buffer_size = 8M
#innodb_flush_log_at_trx_commit = 1
#innodb_lock_wait_timeout = 50
innodb_file_per_table = 1
synology_password_check = FORCE_PLUS_PERMANENT

[mysqldump]
skip lock tables
single transaction
quick
quote names
max_allowed_packet = 1G

[mysql]
no-auto-rehash

[myisamchk]
tmpdir=/var/services/tmp
key_buffer_size = 8M
sort_buffer_size = 8M

[mysqlhotcopy]
interactive-timeout

[mariadb]
plugin_load_add = synology_password_check

!include /var/packages/MariaDB10/etc/my.cnf
!include /var/packages/MariaDB10/etc/my_port.cnf
!include /var/packages/MariaDB10/etc/synology.cnf
